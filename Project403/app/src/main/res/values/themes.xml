<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AidNetworking" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AuthFormEditText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">#DFDFDF</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="AuthFormButton">
        <item name="android:paddingVertical">4dp</item>
        <item name="android:backgroundTint">@color/dodger_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="GoodMorning">
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Category_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/search_edittext</item>
        <item name="android:elevation">10dp</item>
        <item name="android:hint">Search here</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dodger_blue</item>
    </style>

</resources>