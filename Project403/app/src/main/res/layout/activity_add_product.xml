<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assignment.AddProductActivity"
    android:background="@color/pale_turquoise"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvFormTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new Product"
        android:textColor="@color/dark_slate_gray"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take it CAREFUL"
        android:textColor="@color/dark_slate_gray"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/etAddName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/EditTextSearch"
        android:hint="Product Name"/>

    <EditText
        android:id="@+id/etAddPrice"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/EditTextSearch"
        android:hint="Product Price"
        android:layout_marginVertical="16dp"/>
    <Spinner
        android:id="@+id/spnCategory"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="match_parent"
        android:contentDescription="Image here"
        android:src="@drawable/image"
        android:layout_height="200dp"/>
    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@color/dark_slate_gray"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="2">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_slate_gray"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="4dp"/>
        <Button
            android:id="@+id/btnInsert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:backgroundTint="@color/dark_slate_gray"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>